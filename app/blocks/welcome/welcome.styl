.welcome
  display block
  width 100%
  background-image url("../../img/hills.png")
  height 45.1vw
  position relative
  background-attachment fixed
  background-repeat no-repeat
  background-size cover
  &__header
    padding-top 2.55vw
    width 89.3vw
    margin-left 5.7vw
    &:after
      content ""
      clear both
      display table
  &__open
    -webkit-appearance none
    -moz-appearance none
    border none
    background none
    float right
    width 2.4vw
    position fixed
    right 5vw
  &__open-img
    width 100%
  &__container
    width 32.9vw
    margin 7.9vw auto 0
    position relative
    height 15vw
  &__title
    display block
    margin 0 auto
    width 100%
  &__subtitle
    color green
